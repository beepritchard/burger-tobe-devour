<div class="container">
  <!--Jumbotron-->
  <div class="jumbotron text-center bg-white text-gray">
    <h1 class="display-4" id="app-title">Delicious Burger <img src="/assets/img/cheeseburger.png"></h1>
    <p class="lead">Delicious burgers that increase your appetite.</p>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="card border border-gray">
        <div class="card-header bg-white text-gray">
         Order burgers to go please..
        </div>
        <!--Create/add burger form-->
        <div class="card-body">
          <form class="create-form">
            <div class="form-group">
              <label for="burger">Order your burger here:</label>
              <input type="text" class="form-control" id="burgerToGo" placeholder="">
            </div>
            <button class="btn btn-success" type="submit">Place order</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <div class="row mt-4">
    <div class="col-md-6 mt-4">
      <div class="card border border-gray">
        <div class="card-header bg-white text-navy">
         Your Burgers
        </div>
        <!--Div to hold burgers that have not been devoured yet-->
        <div class="card-body">
              {{#each burgers}}
                {{#unless devoured}}
                  {{> burgers/burger-block devour=false}}
                {{/unless}}
              {{/each}}
        </div>
      </div>
    </div>

    <div class="col-md-6 mt-4">
      <div class="card devoured-card">
        <div class="card-header text-white" id="devoured-card-header">
         Devoured burgers
        </div>
        <!--When a burger has been devoured, put burger here-->
        <div class="card-body">
          {{#each burgers}}
              {{#if devoured}}
                {{> burgers/burger-devoured devour=true}}
              {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>